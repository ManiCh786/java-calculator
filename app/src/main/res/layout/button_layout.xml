<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/purple_700">


        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:backgroundTint="#FF1744"
            android:text="C"
            android:textSize="28sp"
            app:layout_column="0"
            app:layout_row="0"
            android:onClick="onButtonClicked"
            />

        <Button
            android:id="@+id/btnPower"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="^"
            android:textSize="28sp"

            app:layout_column="1"
            app:layout_row="0"
            android:onClick="onButtonClicked"

            />

        <Button
            android:id="@+id/btnPercentage"
            android:layout_width="wrap_content"
            android:onClick="onButtonClicked"

            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="%"
            android:textSize="28sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="wrap_content"
            android:onClick="onButtonClicked"

            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"

            android:backgroundTint="@color/black"
            android:text="/"
            android:textSize="28sp"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:onClick="onButtonClicked"

            android:layout_margin="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="7"
            android:textSize="28sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:onClick="onButtonClicked"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="8"
            android:textSize="28sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="9"
            android:onClick="onButtonClicked"

            android:textSize="28sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:onClick="onButtonClicked"

            android:layout_margin="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="*"
            android:textSize="28sp"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:onClick="onButtonClicked"

            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="4"
            android:textSize="28sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:onClick="onButtonClicked"

            android:text="5"
            android:textSize="28sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="0dp"
            android:onClick="onButtonClicked"

            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="6"
            android:textSize="28sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:onClick="onButtonClicked"

            android:layout_margin="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="-"
            android:textSize="28sp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:onClick="onButtonClicked"

            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="1"
            android:textSize="28sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="2"
            android:onClick="onButtonClicked"

            android:textSize="28sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="3"
            android:onClick="onButtonClicked"

            android:textSize="28sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:onClick="onButtonClicked"

            android:backgroundTint="@color/black"
            android:text="+"
            android:textSize="28sp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnZero"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:onClick="onButtonClicked"

            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="0"
            android:textSize="28sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnPoint"
            android:layout_width="wrap_content"
            android:onClick="onButtonClicked"

            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="."
            android:textSize="28sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="182dp"
            android:layout_height="100dp"
            android:onClick="onButtonClicked"

            android:layout_margin="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="2"
            android:backgroundTint="#FF3D00"
            android:text="="
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_columnSpan="2"
            app:layout_row="4"
            app:layout_rowSpan="2"
            tools:ignore="HardcodedText" />

    </androidx.gridlayout.widget.GridLayout>


</LinearLayout>